<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12">
					<div class="col-md-6 animate-box">
						    <%- include('alerts') -%>
					<h3>Contact us</h3>
					<form action="/contacts" method="POST">
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="name">Name</label>
								<input type="text" id="name" name="name" class="form-control" placeholder="your name" value="<%= body.name%>">
							</div>
							
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="email">E-mail</label>
								<input type="text" id="email" name="email"  class="form-control" placeholder="type your e-mail" value="<%= body.email%>">
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="message">Message</label>
								<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="type your message "><%= body.message%></textarea>
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Submit" class="btn btn-primary">
						</div>

					</form>		
				</div>
				<div class="col-md-5 col-md-push-1 animate-box">
						<div class="gtco-contact-info">
								<h3>Contact Information</h3>
								<ul>
									<li class="address">30-34 Westmoreland St, Dublin, D02 HK35 </li>
									<li class="phone"><a>(353) 086 454 6042</a></li>
									<li class="email"><a>morenokatiac@hotmail.com</a></li>
									<li class="url"><a href="/">Km restaurante</a></li>
								</ul>
						</div>
						 <div>
								<h3 class="cursive-font">GROUP RESERVATION CONTACT US.</h3>
						 </div>
				</div>
				</div>
			</div>
		</div>
	</div>